---
import Layout from './Layout.astro';

interface Props {
  title: string;
  description: string;
  author: string;
  publishDate: Date;
  lastUpdated?: Date;
  category?: string;
  tags?: string[];
  difficulty?: string;
  timeToImplement?: number;
  readTime?: number;
}

const { title, description, author, publishDate, lastUpdated, category, tags, difficulty, timeToImplement, readTime = 15 } = Astro.props;

const formattedDate = publishDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<Layout title={`${title} | RainMaker Blog`} description={description} ogType="article" publishedTime={publishDate.toISOString()}>
  <!-- Reading Progress Bar -->
  <div class="reading-progress" id="reading-progress">
    <div class="reading-progress-bar" id="reading-progress-bar"></div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 xl:grid-cols-[1fr_250px] gap-12">
      <!-- Main Content -->
      <article class="max-w-3xl">
        <!-- Breadcrumbs -->
        <nav class="flex items-center gap-2 text-sm text-gray-500 mb-6">
          <a href="/" class="hover:text-cited-blue transition-colors">Home</a>
          <span>/</span>
          <a href="/blog" class="hover:text-cited-blue transition-colors">Blog</a>
          <span>/</span>
          <span class="text-gray-700 font-medium truncate max-w-[250px]">{title}</span>
        </nav>

        <!-- Header -->
        <header class="mb-8">
          {category && (
            <span class="inline-block text-sm px-3 py-1 bg-cited-blue/10 text-cited-blue rounded-full font-medium mb-4">
              {category}
            </span>
          )}

          <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-950-ink mb-6 leading-tight tracking-tight">
            {title}
          </h1>

          <p class="text-lg text-gray-600 leading-relaxed mb-6">
            {description}
          </p>

          <!-- Meta -->
          <div class="flex flex-wrap items-center gap-6 text-gray-600">
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
              <span class="font-medium text-gray-700">{author}</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
              <time datetime={publishDate.toISOString()}>{formattedDate}</time>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
              <span>{readTime} min read</span>
            </div>
          </div>

          {tags && tags.length > 0 && (
            <div class="flex flex-wrap gap-2 mt-5">
              {tags.map(tag => (
                <span class="inline-block text-sm px-3 py-1 bg-gray-100 text-gray-600 rounded-full hover:bg-gray-200 transition-colors">
                  #{tag}
                </span>
              ))}
            </div>
          )}
        </header>

        <!-- Article Body -->
        <div id="article-content" class="prose prose-lg max-w-none
          prose-headings:font-bold prose-headings:text-gray-950-ink
          prose-h2:text-3xl prose-h2:mt-12 prose-h2:mb-6
          prose-h3:text-2xl prose-h3:mt-8 prose-h3:mb-4
          prose-h4:text-xl prose-h4:mt-6 prose-h4:mb-3
          prose-p:text-gray-700 prose-p:leading-relaxed prose-p:mb-6
          prose-a:text-cited-blue prose-a:no-underline hover:prose-a:underline
          prose-strong:text-gray-900 prose-strong:font-semibold
          prose-code:bg-gray-100 prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:text-sm prose-code:before:content-none prose-code:after:content-none
          prose-pre:bg-gray-900 prose-pre:text-gray-100 prose-pre:rounded-xl prose-pre:shadow-lg
          prose-blockquote:border-l-4 prose-blockquote:border-cited-blue prose-blockquote:bg-gray-50-ivory prose-blockquote:py-4 prose-blockquote:px-6 prose-blockquote:not-italic prose-blockquote:rounded-r-lg
          prose-img:rounded-xl prose-img:shadow-lg
          prose-li:text-gray-700 prose-li:marker:text-gray-400
          prose-ul:my-6 prose-ol:my-6
          prose-table:border prose-table:border-gray-200 prose-table:rounded-lg
          prose-th:bg-gray-100 prose-th:px-4 prose-th:py-3 prose-th:text-left prose-th:font-semibold prose-th:whitespace-nowrap
          prose-td:border prose-td:border-gray-200 prose-td:px-4 prose-td:py-3
          prose-hr:border-gray-200 prose-hr:my-12
        ">
          <slot />
        </div>

        <!-- Author Bio -->
        <footer class="mt-16 pt-8 border-t border-gray-200">
          <div class="bg-gray-100 rounded-xl p-6 md:p-8">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-cited-blue rounded-xl flex items-center justify-center flex-shrink-0 shadow-sm">
                <span class="text-white font-bold text-lg">R</span>
              </div>
              <div>
                <h3 class="font-bold text-gray-950-ink text-lg mb-1">RainMaker Ad Ventures</h3>
                <p class="text-gray-600 text-sm leading-relaxed">
                  Performance marketing and media buying agency with $250M+ in cumulative media buying experience.
                  7x Inc. 5000 honoree. Specializing in email, native, video, and display advertising at scale.
                </p>
                <a
                  href="https://rainmakeradventures.com"
                  target="_blank"
                  rel="noopener"
                  class="inline-block mt-3 text-sm font-medium text-cited-blue hover:underline transition-colors"
                >
                  Learn more &rarr;
                </a>
              </div>
            </div>
          </div>
        </footer>
      </article>

      <!-- Sidebar TOC (Desktop) -->
      <aside class="hidden xl:block">
        <nav id="toc-sidebar" class="sticky top-28 max-h-[calc(100vh-8rem)] overflow-y-auto">
          <h4 class="font-semibold text-gray-950-ink mb-4 text-sm uppercase tracking-wider">On this page</h4>
          <ul id="toc-list" class="space-y-1 text-sm border-l border-gray-200">
            <!-- Populated by JS -->
          </ul>
        </nav>
      </aside>
    </div>
  </div>

  <script>
    // Reading progress bar
    function updateProgress() {
      const bar = document.getElementById('reading-progress-bar');
      if (!bar) return;
      const docHeight = document.documentElement.scrollHeight - window.innerHeight;
      const scrolled = (window.scrollY / docHeight) * 100;
      bar.style.width = Math.min(scrolled, 100) + '%';
    }
    window.addEventListener('scroll', updateProgress, { passive: true });

    // Table of Contents generation
    function buildTOC() {
      const content = document.getElementById('article-content');
      const tocList = document.getElementById('toc-list');
      if (!content || !tocList) return;

      const headings = content.querySelectorAll('h2, h3');
      if (headings.length === 0) return;

      headings.forEach((heading, i) => {
        const id = heading.id || 'heading-' + i;
        heading.id = id;

        const li = document.createElement('li');
        const a = document.createElement('a');
        a.href = '#' + id;
        a.textContent = heading.textContent;
        a.className = `block py-1.5 transition-colors border-l-2 -ml-px ${
          heading.tagName === 'H3' ? 'pl-6' : 'pl-4'
        } border-transparent text-gray-500 hover:text-gray-900 hover:border-gray-300`;
        a.dataset.heading = id;

        li.appendChild(a);
        tocList.appendChild(li);
      });

      // Intersection observer for active heading
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              const id = entry.target.id;
              tocList.querySelectorAll('a').forEach(link => {
                if (link.dataset.heading === id) {
                  link.className = link.className
                    .replace('border-transparent text-gray-500', 'border-cited-blue text-cited-blue font-medium');
                } else {
                  link.className = link.className
                    .replace('border-cited-blue text-cited-blue font-medium', 'border-transparent text-gray-500');
                }
              });
            }
          });
        },
        { rootMargin: '-100px 0px -66%' }
      );

      headings.forEach(h => observer.observe(h));
    }

    document.addEventListener('DOMContentLoaded', buildTOC);
  </script>
</Layout>
